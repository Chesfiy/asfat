   <!-- Add your site or application content here -->
   <main>

      <!-- Page Title Area Start  -->
      <section class="page-title-area breadcrumb-spacing" data-background="/assets/img/breadcrumb/breadcrumb-img.jpg">
        <div class="container">
           <div class="row">
              <div class="col-xxl-9">
                 <div class="page-title-wrapper">
                    <h3 class="page-title mb-25">Service Details</h3>
                    <div class="breadcrumb-menu">
                       <nav aria-label="Breadcrumbs" class="breadcrumb-trail breadcrumbs">
                          <ul class="trail-items">
                             <li class="trail-item trail-begin"><a href="/"><span>Home</span></a></li>
                             <li class="trail-item trail-end"><span>{{service.name}}</span></li>
                          </ul>
                       </nav>
                    </div>
                 </div>
              </div>
           </div>
        </div>
     </section>
      <!-- Page Title Area End  -->

      <!-- Services Details Start Here  -->
      <section class="bd-details__area pt-120 pb-60">
         <div class="container">
            <div class="row">
               <div class="col-xl-8">
                  <div class="bd-details__content mb-60">
                     <div class="bd-details__content--thum br-img-6 w-img mb-50">
                        <img src="{{service.image}}" alt="services images">
                     </div>
                     <h4 class="bd__title-xs mb-15">{{service.name}}</h4>
                     <p class="mb-25">{{service.description}}</p>
                     <h4 class="bd__title-xs mb-25">{{service.name}} Gallery</h4>
                     <div class="row mb-25 grid bd-case-masonary">
                        {{#each service.gallery}}
                           <div class="col-lg-4 col-sm-6 grid__item c1 c2">
                              <div class="bd-case__item mb-4">
                                 <div class="bd-case__img">
                                    <img src="{{image}}" alt="case">
                                    <div class="bd-case__content">
                                       <div class="bd-case__icon">
                                          <a class="image-popups" href="{{image}}"><i class="fal fa-plus"></i></a>
                                       </div>
                                       <p class="bd-case__text">{{service.name}}</p>
                                       <h3 class="bd-case__title"><a href="#">{{title}}</a></h3>
                                    </div>
                                 </div>
                           </div>
                        </div>
                        {{/each}}
                     </div>
                  </div>
               </div>
               <div class="col-xl-4">
                  <div class="bd-details-sidebar mb-60">
                     <div class="sidebar__widget white-bg-2 border-radius-6 mb-60">
                        <div class="sidebar-title mb-25">
                           <h4>Our Services</h4>
                        </div>
                        <ul class="sidebar__list">

                           {{#each services}}
                              <li><a href="/service/{{id}}">{{name}} <span class="icon"><i class="far fa-arrow-right"></i></span></a></li>
                           {{/each}}
                       </ul>
                     </div>
                     <div class="sidebar__widget white-bg-2 border-radius-6">
                        <div class="sidebar-title mb-25">
                           <h4>Quick Contact</h4>
                        </div>
                        <div class="contact-form">
                           <form action="/contact-us" method="post">
                              <div class="bd-single__input mb-20">
                                 <input name="name" type="text" placeholder="Your Name" required>
                              </div>
                              <div class="bd-single__input mb-20">
                                 <input name="phone" type="tel" placeholder="Phone nume" required>
                              </div>
                              <div class="bd-single__input mb-20">
                                 <input name="email" type="email" placeholder="Email Address">
                              </div>
                              <div class="bd-single__input mb-20">
                                 <textarea name="message" id="message" placeholder="Your Message" required></textarea>
                              </div>
                              <div class="bd-single__input">
                                 <button type="submit" class="theme-btn">Make An Order</button>
                              </div>
                           </form>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </section>
      <!-- Services Details End Here  -->


   </main>